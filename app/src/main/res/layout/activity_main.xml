<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:gravity="center_horizontal"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    tools:context="in.aviaryan.hinix.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/topPanel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingTop="10dp"
                android:weightSum="2">

                <LinearLayout
                    android:id="@+id/CscorePanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@drawable/top"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/currentTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/col"
                        android:padding="5dp"
                        android:text="Your Score"
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/current"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="5dp"
                        android:text="0"
                        android:textSize="15sp" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/maxPanel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:layout_weight="1"
                    android:background="@drawable/top"
                    android:orientation="horizontal"
                    android:padding="4dp"
                    android:paddingBottom="10dp">

                    <TextView
                        android:id="@+id/maxTag"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/col"
                        android:padding="5dp"
                        android:text="Max Score "
                        android:textSize="15sp" />

                    <TextView
                        android:id="@+id/max"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="4dp"
                        android:text="999"
                        android:textAlignment="gravity"
                        android:textSize="15sp" />
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/current_word"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="#757575"
                android:textSize="32sp"
                android:textStyle="bold" />
        </LinearLayout>


        <TableLayout
            android:id="@+id/grid"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:layout_below="@id/topPanel"
            android:layout_marginTop="5dp"
            android:foregroundGravity="center"></TableLayout>

        <TextView
            android:id="@+id/textScreen"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/grid"
            android:layout_weight="1"
            android:text="" />
    </RelativeLayout>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/buttonShow"
        android:onClick="buttonShow"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        app:fabSize="normal"
        app:srcCompat="@android:drawable/ic_dialog_info" />

</RelativeLayout>
